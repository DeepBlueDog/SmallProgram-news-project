/**index.wxss**/
/*顶部分类栏目*/
.topTabBarClass {
  position: fixed;
  top: 0rpx;
  background-color: #ff5400;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  z-index: 99;
}

/*类型选择 默认样式*/
.topTypeListClass {
  display: inline-block;
  margin-top: 18rpx;
  margin-left: 10rpx;
  font-size: 30rpx;
  width:100rpx;
  height: 75%;
  text-align: center;
  color: #333;
}

/*类型选择 选中样式*/
.curPage {
  animation-fill-mode: forwards;
  color: #fff;
  margin-top: 12rpx;
  font-size: 35rpx;
  border-bottom: 5rpx white solid;
}

::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}

.news-item {
  display: flex;
  align-items: center;
  height: 150rpx;
  margin: 0 20rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}

.cell-wrapper {
  width: 80%;
}

.title {
  opacity: 0.8;
  font-size: 35rpx;
  line-height: 49rpx;
}

.date-source {
  display: flex;
  flex-direction: row;
  width:100%;
  margin-top: 5rpx;
  opacity: 0.5;
  font-size: 25rpx;
  line-height: 35rpx;
}

.date {
  width:50%;
}

  .source {
    width:50%;
  }

.news-image {
  width: 150rpx;
  height: 120rpx;
  float: right;
}
